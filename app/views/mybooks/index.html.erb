<p id="notice"><%= notice %></p>

<h1>Listing Mybooks</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Date</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |mybook| %>
      <tr>
        <td><%= mybook.book %></td>
        <td><%= mybook.author %></td>
        <td><%= mybook.price %></td>
        <td><%= mybook.publisher %></td>
        <td><%= mybook.date %></td>
        <td><%= mybook.isbn %></td>
        <td><%= link_to 'Show', mybook %></td>
        <td><%= link_to 'Edit', edit_mybook_path(mybook) %></td>
        <td><%= link_to 'Destroy', mybook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mybook', new_mybook_path %>
